<div class="index-box">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="link-button"><%= link_to 'Show', book_path(book.id) %></td>
          <td class="link-button"><%= link_to 'Edit', edit_book_path(book) %></td>
          <td class="link-button"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New Book</h2>
  <% if @book.errors.any? %>
  <div class="error-box">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <div class="message-list">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <%= form_with model: @book do |f| %>
    <div class="create-box">
      <div class="create-title">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="create-body">
        <p>Body</p>
        <%= f.text_area :body %>
      </div>
      <div class="create-button">
        <%= f.submit 'Create Book' %>
      </div>
    </div>
  <% end %>
</div>

