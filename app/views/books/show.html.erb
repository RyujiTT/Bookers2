<div class="show-box">
    <% if flash[:notice] %>
        <p id="notice">
            <%= flash[:notice] %>
        </p>
    <% end %>
    <div class="show-title">
        <p>
            <strong>Title: </strong>
            <%= @book.title %>
        </p>
    </div>
    <div class="show-body">
        <p>
            <strong>Body: </strong>
            <%= @book.body %>
        </p>
    </div>
    <div class="link-box">
        <span class="link-button"><%= link_to "edit", edit_book_path(@book.id) %></span>
        <span>|</span>
        <span class="link-button"><%= link_to "back", books_path %></span>
    </div>
</div>