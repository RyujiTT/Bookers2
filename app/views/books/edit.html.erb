<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-3 mb-2">Editing Book</h1>

      <%= render 'books/error', model: @book %>

      <%= form_with model: @book do |f| %>
        <div class="form-label mb-3">
          <p class="mb-2">Title</p>
          <%= f.text_field :title, class: "form-control", style: "width:100%" %>
        </div>
        <div class="form-label mb-3">
          <p class="mb-2">Opinion</p>
          <%= f.text_area :body, class: "form-control", style: "width:100%", rows: "2" %>
        </div>
        <div class="mt-2 mb-3">
          <%= f.submit 'Update Book', :class=>"btn btn-success" %>
        </div>
      <% end %>

      <div>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>

