<div class="edit-box">
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
  <div class="error-box">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <div class="message-list">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <%= form_with model: @book do |f| %>
     <div class="edit-content">
       <div class="edit-title">
         <p>Title</p>
         <%= f.text_field :title %>
       </div>
       <div class="edit-body">
         <p>Body</p>
         <%= f.text_area :body %>

       </div>
       <div class="edit-button">
         <%= f.submit 'Update Book' %>
       </div>
     </div>
  <% end %>
  <span class="link-button"><%= link_to "show", book_path %></span>
  <span>|</span>
  <span class="link-button"><%= link_to "back", books_path %></span>
</div>

