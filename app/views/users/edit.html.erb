<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3 mb-2">User info</h2>
      <%= render 'books/error', model: @user %>
      <%= form_with model: @user do |f| %>
        <div class="form-label mb-3">
          <p class="mb-2">Name</p>
          <%= f.text_field :name, class: "form-control", style: "width:100%" %>
        </div>
        <div class="form-label mb-3">
          <p class="mb-2">Image</p>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-label mb-3">
          <p class="mb-2">Introduction</p>
          <%= f.text_area :introduction, class: "form-control", style: "width:100%", rows: "2" %>
        </div>
        <div>
          <%= f.submit "Update User", :class=>"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
