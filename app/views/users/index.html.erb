<% if flash[:notice] %>
    <p id="notice">
        <%= flash[:notice] %>
    </p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
      	<h2 class="mt-2">Users</h2>
        <thead>
            <th>image</th>
            <th>name</th>
            <th></th>
          </thead>
        <tbody>
        	 <% @users.each do |user| %>
      	  	<tr>
      	  	  <td>
      	  	    <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image(80,80) %>
                <% else %>
                  <%= image_tag "default-image.jpg", :size => '80x80' %>
                <% end %>
      	  	  </td>
      	  	  <td><%= user.name %></td>
      	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
      	    </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>